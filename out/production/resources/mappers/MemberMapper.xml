<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.websrv.theaterseat.dao.MemberMapper">

    <select id="selectMemberList" parameterType="com.websrv.theaterseat.dao.MemberDao" resultType="com.websrv.theaterseat.dao.MemberDao">
        select * from member
    </select>

    <select id="findDuplicatedId" resultType="boolean">
        select count(userId) from member where userId=#{userId}
    </select>

    <insert id="insertMember" parameterType="com.websrv.theaterseat.dao.MemberDao">
        insert into member(userId,userPw) values(#{userId},#{userPw})
    </insert>

</mapper>
