<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.websrv.theaterseat.dao.TheaterMapper">

    <select id="selectTheaterName" resultType="String">
        select theaterName from theater
    </select>

    <select id="selectRoomNumMap" resultType="String">
        select roomName from room
    </select>

    <select id="selectRoomName" parameterType="String" resultType="String">
        select r_idx from theater,room where theater.t_idx = room.t_idx and theater.theaterName=#{theaterName}
    </select>

</mapper>
